<!DOCTYPE html>
<html>

<head>
  <title>Weather app</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Titan+One&display=swap"
    rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
 


    <section class="vh-100" style="background-color: #4B515D;">
      <div class="container py-5 h-100">
    
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-md-8 col-lg-6 col-xl-4">
    
            <div class="card" style="color: #4B515D; border-radius: 35px;">
              <div class="card-body p-4">
    
                <div class="d-flex"> 
                  <h6 class="flex-grow-1"> 

                    <h1>Weather in <%= city %></h1>
                    <% if (willRainTomorrow) { %>
                        <p>It will rain tomorrow in <%= city %>.</p>
                    <% } else { %>
                        <p>No rain is expected tomorrow in <%= city %>.</p>
                    <% } %>

                  </h6>
                  <h6 class="px-2" id="currentTime"></h6>
                </div>
    
                <div class="d-flex flex-column text-center mt-5 mb-4">
                  <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;">   Â°C </h6>           
                         <span class="small" style="color: #868B94"></span>
                </div>
    
                <div class="d-flex align-items-center">
                  <div class="flex-grow-1" style="font-size: 1rem;">
                    <div><i class="fas fa-wind fa-fw" style="color: #868B94;"></i> <span class="ms-1"> 40 km/h
                      </span></div>
                    <div><i class="fas fa-tint fa-fw" style="color: #868B94;"></i> <span class="ms-1"> 84% </span>
                    </div>
                    <div><i class="fas fa-sun fa-fw" style="color: #868B94;"></i> <span class="ms-1"> 0.2h </span>
                    </div>
                  </div>
                  <div>
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-weather/ilu1.webp"
                      width="100px">
                  </div>
                </div>
    
              </div>
            </div>
    
          </div>
        </div>
    
      </div>
    </section>



    <script>
      // update the current time
      function updateTime() {
          const currentTimeElement = document.getElementById('currentTime');

          const now = new Date();
          console.log("now:", now);
          const hours = now.getHours().toString().padStart(2, '0');
          const minutes = now.getMinutes().toString().padStart(2, '0');
          const currentTimeString = `${hours}:${minutes}`;
          console.log("hours:", hours);
          console.log("minutes:", minutes);
          console.log("currentTimeString:", currentTimeString);

          currentTimeElement.textContent = currentTimeString;
      }
      
      setInterval(updateTime, 60000);  // Update the time every 60 second
      updateTime(); // Call updateTime initially to set the time immediately
  </script>


    </head> 
    </html>






      



